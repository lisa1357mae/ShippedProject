<p id="notice"><%= notice %></p>

<div class="section_heading">
<h1 class= "section-heading" style="color:brown;font-size:300%;font-family:'Contrail One',cursive;">Companies</h1>
<table id= "company_style">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</div>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.username %></td>
        <td><%= company.email %></td>
        <td><%= company.firstname %></td>
        <td><%= company.lastname %></td>
        <td><%= company.password %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_company_path do %>


        <span class="fa-stack fa-4x" style="color:brown;">
        <i class="fa fa-anchor" aria-hidden="true"></i>
  <button id="newBoatbutton" class="btn btn-primary btn-xl text-uppercase" type="submit">New Company</button>

        </span>

        <% end %>
