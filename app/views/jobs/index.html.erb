<p id="notice"><%= notice %></p>

<div class="section_heading">
<h1 class= "section-heading" style="color:brown;font-size:300%;font-family:'Contrail One',cursive;">Jobs</h1>

<table id="jobs_style">
  <thead>
    <tr>
      <th>Boat</th>
      <th>Status</th>
      <th>Load amount</th>
      <th>Sender</th>
      <th>Buyer</th>
      <th>Cost</th>
      <th>Origin</th>
      <th>Destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</div>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.boat_id %></td>
        <td><%= job.status %></td>
        <td><%= job.load_amount %></td>
        <td><%= job.sender_id %></td>
        <td><%= job.buyer_id %></td>
        <td><%= job.cost %></td>
        <td><%= job.origin %></td>
        <td><%= job.destination %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_job_path do %>

<span class="fa-stack fa-4x" style="color:brown;">
<i class="fa fa-anchor" aria-hidden="true"></i>
<button id="newBoatbutton" class="btn btn-primary btn-xl text-uppercase" type="submit">New Job</button>

</span>

<% end %>
